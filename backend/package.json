{
  "name": "backend",
  "version": "1.0.0",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "nodemon src/index.ts",
    "build": "npm install && npx rimraf dist && npx tsc --project tsconfig.json",
    "render-build": "npm install && npm run build",
    "render-start": "node dist/index.js",
    "prod": "node prod-start.js",
    "migrate": "node migrate-database.js",
    "prestart": "npm run build",
    "type-check": "npx tsc --noEmit",
    "clean": "npx rimraf dist node_modules package-lock.json",
    "fresh-install": "npm run clean && npm install",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "e2e:tournament": "API_BASE=http://localhost:8000 ts-node src/scripts/testTournamentFlow.ts"
  },
  "keywords": [
    "fastify",
    "typescript",
    "api",
    "backend"
  ],
  "author": "",
  "license": "ISC",
  "description": "Backend API for e-sport connection application",
  "dependencies": {
    "@fastify/compress": "7.0.3",
    "@fastify/cors": "^9.0.1",
    "@fastify/etag": "^4.2.0",
    "@fastify/multipart": "^8.0.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/mongoose": "^5.11.96",
    "@types/node": "^20.10.5",
    "@types/node-cron": "^3.0.11",
    "@types/socket.io": "^3.0.1",
    "axios": "^1.11.0",
    "bcryptjs": "^2.4.3",
    "cloudinary": "^2.7.0",
    "dotenv": "^16.3.1",
    "express": "^5.1.0",
    "fastify": "^4.29.1",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "node-cron": "^3.0.3",
    "socket.io": "^4.8.1",
    "typescript": "^5.3.3",
    "@fastify/rate-limit": "^9.1.0"
  },
  "devDependencies": {
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "@types/jest": "^29.5.8",
    "@types/supertest": "^2.0.16",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^9.1.3",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "rimraf": "^5.0.5"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
