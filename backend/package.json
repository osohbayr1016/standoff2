{
  "name": "backend",
  "version": "1.0.0",
  "main": "dist/index.js",
  "scripts": {
    "start": "node --max-old-space-size=256 --optimize-for-size --gc-interval=100 --expose-gc prod-start.js",
    "dev": "nodemon src/index.ts",
    "build": "node prod-build.js",
    "build:clean": "npm run clean:dist && npm run build",
    "clean:dist": "powershell -Command \"if (Test-Path dist) { Remove-Item -Recurse -Force dist }\"",
    "render-build": "npm install --production",
    "render-start": "node --max-old-space-size=256 --optimize-for-size --gc-interval=100 --expose-gc dist/index.js",
    "prod": "node prod-start.js",
    "migrate": "node migrate-database.js",
    "type-check": "npx tsc --noEmit",
    "clean": "powershell -Command \"if (Test-Path dist) { Remove-Item -Recurse -Force dist }; if (Test-Path node_modules) { Remove-Item -Recurse -Force node_modules }; if (Test-Path package-lock.json) { Remove-Item -Force package-lock.json }\"",
    "fresh-install": "npm run clean && npm install",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "e2e:tournament": "API_BASE=http://localhost:8000 ts-node src/scripts/testTournamentFlow.ts",
    "init:achievements": "ts-node src/scripts/runAchievementInit.ts",
    "migrate:unique-ids": "ts-node src/scripts/addUniqueIdsToProfiles.ts",
    "deploy:build": "npm run build:clean && npm run init:achievements",
    "deploy:start": "node dist/index.js",
    "restore:data": "node restore-all-data.js",
    "restore:users": "node restore-user-data.js",
    "restore:atlas": "node restore-from-mongodb-atlas.js",
    "export:data": "node export-user-data.js",
    "import:data": "node import-user-data.js"
  },
  "keywords": [
    "fastify",
    "typescript",
    "api",
    "backend"
  ],
  "author": "",
  "license": "ISC",
  "description": "Backend API for e-sport connection application",
  "dependencies": {
    "@fastify/compress": "7.0.3",
    "@fastify/cors": "^9.0.1",
    "@fastify/etag": "^4.2.0",
    "@fastify/multipart": "^8.3.1",
    "@fastify/rate-limit": "^9.1.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/mongoose": "^5.11.96",
    "@types/multer": "^2.0.0",
    "@types/node": "^20.10.5",
    "@types/node-cron": "^3.0.11",
    "@types/socket.io": "^3.0.1",
    "axios": "^1.11.0",
    "bcryptjs": "^2.4.3",
    "cloudinary": "^2.8.0",
    "dotenv": "^16.3.1",
    "express": "^5.1.0",
    "fastify": "^4.29.1",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "multer": "^2.0.2",
    "node-cron": "^3.0.3",
    "puppeteer": "^24.34.0",
    "socket.io": "^4.8.1",
    "typescript": "^5.3.3"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/supertest": "^2.0.16",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^9.1.3",
    "nodemon": "^3.1.10",
    "rimraf": "^5.0.10",
    "socket.io-client": "^4.8.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
